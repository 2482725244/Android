<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/side2"
    android:layout_width="match_parent"
    android:layout_height="90dp">


    <ImageView
        android:id="@+id/fra_newpager_linear_item_iv"
        android:background="#ccc"
        android:scaleType="fitXY"
        android:layout_width="116dp"
        android:layout_height="90dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fra_newpager_linear_item_title"
            android:text="信息"
            android:textColor="#000"
            android:layout_marginLeft="3dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/fra_newpager_linear_item_personnumber"
            android:text="人数"
            android:layout_marginTop="10dp"
            android:textColor="#605A5A"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/fra_newpager_linear_item_zannumber"
            android:text="点赞数"
            android:textColor="#605A5A"
            android:layout_gravity="right"
            android:textSize="14sp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>




    </LinearLayout>




</LinearLayout>