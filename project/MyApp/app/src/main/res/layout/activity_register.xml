<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:src="@drawable/f1"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="600dp">

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="500dp">

            <CheckBox
                android:id="@+id/ac_register_checkbox"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:text="我已阅读并同意《智慧城市相关条款》"
                android:textColor="#666"
                android:layout_toRightOf="@id/ac_register_checkbox"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:text="注册"
                android:textColor="#fff"
                android:textSize="32sp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/select_login"
                android:layout_width="200dp"
                android:layout_marginBottom="70dp"
                android:layout_height="80dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:background="@drawable/shape_register"
            android:layout_centerHorizontal="true"
            android:layout_width="360dp"
            android:layout_height="280dp">

            <EditText
                android:layout_marginTop="40dp"
                android:drawableLeft="@drawable/user"
                android:layout_marginLeft="10dp"
                android:drawablePadding="13dp"
                android:hint="请输入您的手机号"
                android:textColorHint="#999"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="70dp"/>

            <EditText
                android:layout_marginTop="20dp"
                android:hint="请设置您的密码"
                android:textColorHint="#999"
                android:drawableLeft="@drawable/pwd"
                android:layout_marginLeft="10dp"
                android:drawablePadding="13dp"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="70dp"/>

        </LinearLayout>



    </RelativeLayout>



</RelativeLayout>