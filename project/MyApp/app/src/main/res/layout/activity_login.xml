<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/action_bar"/>

    <EditText
        android:id="@+id/ac_login_user"
        android:hint="请输入账号/手机号"
        android:layout_marginTop="30dp"
        android:textColor="#000"
        android:textSize="28sp"
        android:textColorHint="#BFB4B4"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="30dp"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <EditText
        android:id="@+id/ac_login_pwd"
        android:hint="请输入密码"
        android:textColorHint="#BFB4B4"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        android:textSize="28sp"
        android:drawableLeft="@drawable/pwd"
        android:drawablePadding="30dp"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <Button
        android:id="@+id/ac_login_btn"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:text="登     录"
        android:textColor="#fff"
        android:textSize="32sp"
        android:background="@drawable/select_login"
        android:layout_gravity="center"
        android:layout_height="100dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <CheckBox
            android:layout_marginTop="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:layout_marginTop="20dp"
            android:text="我已阅读并同意《智慧城市相关条款和责任》"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ac_login_admin"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:text="忘记密码"
            android:textColor="#03A9F4"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/ac_login_toregister"
            android:layout_marginTop="20dp"
            android:text="还没有账号，去注册"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:textColor="#03A9F4"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

    </LinearLayout>


</LinearLayout>