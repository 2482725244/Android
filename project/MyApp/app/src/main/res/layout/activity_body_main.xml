<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ccc"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/ac_body_vp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_weight="12"
        android:layout_height="0dp"/>


    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:id="@+id/bottom_b1"

            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#999"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/bottom_b1_iv"
                android:src="@drawable/select_bottm_p"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <TextView
                android:id="@+id/bottom_b1_tv"
                android:text="aaaaa"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_b2"

            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#999"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/bottom_b2_iv"
                android:src="@drawable/select_bottm_p"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <TextView
                android:id="@+id/bottom_b2_tv"
                android:text="aaaaa"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_b3"

            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#999"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/bottom_b3_iv"
                android:src="@drawable/select_bottm_p"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <TextView
                android:id="@+id/bottom_b3_tv"
                android:text="aaaaa"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_b4"

            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#999"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/bottom_b4_iv"
                android:src="@drawable/select_bottm_p"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <TextView
                android:id="@+id/bottom_b4_tv"
                android:text="aaaaa"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>