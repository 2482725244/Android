<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="登陆界面"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="32sp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#2196F3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#D8D1D1"
        android:paddingRight="10dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="2"
            android:gravity="center"
            android:layout_width="0dp"
            android:text="账号："
            android:textSize="23sp"
            android:layout_height="match_parent"/>
        <EditText
            android:id="@+id/ac_login_user"
            android:textSize="23sp"
            android:textColor="#000"
            android:maxLength="11"
            android:maxLines="1"
            android:hint="请输入用户名/手机号码"
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="80dp"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#D8D1D1"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ac_login_pwd"
            android:paddingLeft="30dp"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="30dp"
            android:textSize="23sp"
            android:textColor="#000"
            android:maxLength="11"
            android:maxLines="1"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/ac_login_btn"
        android:layout_width="300dp"
        android:textSize="32sp"
        android:text="登录"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/select_button_loginac"
        android:textColor="#fff"
        android:layout_height="80dp"/>

    <TextView
        android:id="@+id/ac_login_register"
        android:textColor="#2196F3"
        android:layout_marginTop="20dp"
        android:layout_gravity="left"
        android:text="没有账号，先去注册一个吧"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ac_login_more"
        android:textColor="#2196F3"
        android:layout_marginTop="20dp"
        android:layout_gravity="right"
        android:text="没有手机号，我想试用"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>