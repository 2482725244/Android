<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:background="#333"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <Button
            android:text="to_fragment"
            android:textSize="23sp"
            android:textAllCaps="false"
            android:background="#699338"
            android:id="@+id/to_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:text="to_vpfragment"
            android:layout_marginTop="10dp"
            android:textSize="23sp"
            android:textAllCaps="false"
            android:background="#699338"
            android:id="@+id/to_vpfragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:text="to_index"
            android:layout_marginTop="10dp"
            android:textSize="23sp"
            android:textAllCaps="false"
            android:background="#699338"
            android:id="@+id/to_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:text="to_login"
            android:layout_marginTop="10dp"
            android:textSize="23sp"
            android:textAllCaps="false"
            android:background="#699338"
            android:id="@+id/to_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:text="to_move"
            android:layout_marginTop="10dp"
            android:textSize="23sp"
            android:textAllCaps="false"
            android:background="#699338"
            android:id="@+id/to_move"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_linear_list"
        android:background="#8FC583"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




</LinearLayout>