<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:color="#FFEB3B" android:width="1dp"/>
            <corners android:radius="32dp"/>
            <gradient android:startColor="#FF5722"
                android:endColor="#FFC107" android:centerColor="#FF9800"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:color="#E91E63" android:width="1dp"/>
            <corners android:radius="32dp"/>
            <gradient android:startColor="#3F51B5"
                android:endColor="#9C27B0" android:centerColor="#673AB7"/>
        </shape>
    </item>

</selector>