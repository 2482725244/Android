<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/topbar"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fragment_diamore_y_messenger"
                android:layout_marginLeft="121dp"
                android:background="@drawable/fragment_diamore_messenger_y_tv"
                android:gravity="center"
                android:padding="13dp"
                android:minHeight="60dp"
                android:textColor="#fff"
                android:textSize="20sp"
                android:text="你在做"
                android:layout_width="180dp"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginTop="50dp"
                android:background="#00BCD4"
                android:layout_width="8dp"
                android:layout_height="8dp"/>

            <ImageView
                android:id="@+id/fragment_diamore_y_tx"
                android:src="@drawable/me_tx"
                android:layout_marginLeft="8dp"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_diamore_recycleview"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_weight="10"
        android:layout_height="0dp"/>

    <LinearLayout
        android:background="#f5f5f5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:src="@drawable/fasongmore"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
        <EditText
            android:id="@+id/fragment_diamore_edit"
            android:background="#fff"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_width="250dp"
            android:layout_height="40dp"/>
        <Button
            android:id="@+id/fragment_diamore_button"
            android:background="@drawable/fragment_diamore_fasong"
            android:layout_gravity="center"
            android:text="发送"
            android:textSize="19sp"
            android:textColor="#fff"
            android:layout_marginLeft="6dp"
            android:layout_width="78dp"
            android:layout_height="40dp"/>


    </LinearLayout>

</LinearLayout>